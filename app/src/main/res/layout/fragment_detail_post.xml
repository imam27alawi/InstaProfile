<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailPostFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            >
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:layout_margin="10dp"
                />
            <TextView
                android:id="@+id/tvPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titleLocation"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgDetailProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/AppBar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/profile"
        android:layout_margin="16dp"
        />
    <TextView
        android:id="@+id/tvDetailUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleUsername"
        app:layout_constraintTop_toTopOf="@id/imgDetailProfile"
        app:layout_constraintLeft_toRightOf="@id/imgDetailProfile"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        />
    <TextView
        android:id="@+id/tvDetailLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleLocation"
        app:layout_constraintTop_toBottomOf="@id/tvDetailUsername"
        app:layout_constraintLeft_toRightOf="@id/imgDetailProfile"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        />

    <ImageView
        android:id="@+id/imgPostDetail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/imgDetailProfile"
        android:src="@drawable/profile"
        />
    <ImageView
        android:id="@+id/imgLike"
    android:layout_width="25dp"
    android:layout_height="25dp"
    app:layout_constraintTop_toBottomOf="@id/imgPostDetail"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="16dp"
    android:src="@drawable/ic_like"
    />
    <TextView
        android:id="@+id/tvDetailLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgLike"
        app:layout_constraintStart_toStartOf="@id/imgLike"
        app:layout_constraintEnd_toEndOf="@id/imgLike"
        android:text="12"

/>
    <ImageView
        android:id="@+id/imgComment"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/imgPostDetail"
        app:layout_constraintLeft_toRightOf="@id/imgLike"
        android:layout_margin="16dp"
        android:src="@drawable/ic_comment"
        />
    <TextView
        android:id="@+id/tvDetailComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgComment"
        app:layout_constraintStart_toStartOf="@id/imgComment"
        app:layout_constraintEnd_toEndOf="@id/imgComment"
        android:text="12"
        />


</androidx.constraintlayout.widget.ConstraintLayout>